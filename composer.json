{
    "name": "claudiu-cristea/monorepo",
    "description": "Monorepo+Multirepos demo",
    "require": {
        "php": "^7.1",
        "cweagans/composer-patches": "^1.7"
    },
    "require-dev": {
        "devshop/git-split": "1.x-dev"
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir -p ./bin"
        ],
        "post-update-cmd": [
            "mkdir -p ./bin"
        ]
    },
    "extra": {
        "git-split": {
            "repos": {
                "packages/repo1": "https://github.com/claudiu-cristea/repo1.git",
                "packages/repo2": "https://github.com/claudiu-cristea/repo2.git"
            }
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patches": {
            "devshop/git-split": {
                "Support macOS": "https://patch-diff.githubusercontent.com/raw/devshop-packages/git-split/pull/1.diff"
            }
        }
    }
}
